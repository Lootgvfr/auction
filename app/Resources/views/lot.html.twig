{% extends 'base.html.twig' %}

{% block title %}
	{% if found %}
		{{ lot.name }}
	{% else %}
		Not Found
	{% endif %}
{% endblock %}

{% block css %}
	<link href="{{ asset('css/lot.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
	{% if found %}
		{% if lot.img %}
		<img class="img" src="{{ lot.img }}">
		{% endif %}
		<div class="text">{{ lot.name }}</div>
		<div class="text">Description: {{ lot.description }}</div>
		<div class="text">Price: {{ lot.startPrice }} hrn.</div>
		{% if lot.buyoutPrice %}
		<div class="text">Buyout price: {{ lot.buyoutPrice }} hrn.</div>
		{% endif %}
		<p>
			Properties:
			{% for prop in properties %}
				<div class="property">
					{{ prop.name }} : {{ prop.value }}
				</div>
			{% endfor %}
		</p>
		<input class="submit" type="submit" value="Buy"/>
		{% if is_granted('IS_AUTHENTICATED_FULLY') %}
			{% if app.user.username == author.username %}
				<div class="right">
					<p><a href="{{ path('edit-lot', {'id':lot.id}) }}">Edit</a></p>
					<a href="{{ path('delete-lot', {'id':lot.id}) }}">Delete</a>
				</div>
			{% endif %}
		{% endif %}
	{% else %}
		Lot not found.
	{% endif %}
{% endblock %}