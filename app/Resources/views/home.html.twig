{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block css %}
	<link href="{{ asset('css/home.css') }}" rel="stylesheet">
{% endblock %}

{% block content %}
	<div class="welcome">
	Welcome to the internet-auction!
	</div>
	<div class="part">
		<div class="txt">Recently opened lots:</div>
		<ul class="grid">
			{% for lot in recent %}
				<li class="item">
					<a href="{{ path('lot', {'id':lot.id}) }}">
						<img class="item-pic" src="{{ lot.img }}" alt="{{ lot.name }}"/>
						<div class="item-name">{{ lot.name }}</div><br>
					</a>
					<div class="bottom">
						{% if lot.status == 'Finished' %}
							<label class="label-closed">Closed</label>
						{% elseif lot.status == 'Unconfirmed' %}
							<label class="label-closed">Unconfirmed</label>
						{% else %}
							<label class="label-open">Open</label>
						{% endif %}
						<div class="item-price">{{ lot.currentPrice }} {{ lot.currency.name }}</div>
						<!-- <a href="#" class="item-buy">Buy</a> -->
						<div class="item-comments">{{ lot.comments|length }} comments</div>
					</div>
				</li>
			{% endfor %}
		</ul>
	</div>
	
	<div class="part">
		<div class="txt">Recommended for you:</div>
		<ul class="grid">
			{% for lot in recommended %}
				<li class="item">
					<a href="{{ path('lot', {'id':lot.id}) }}">
						<img class="item-pic" src="{{ lot.img }}" alt="{{ lot.name }}"/>
						<div class="item-name">{{ lot.name }}</div><br>
					</a>
					<div class="bottom">
						{% if lot.status == 'Finished' %}
							<label class="label-closed">Closed</label>
						{% elseif lot.status == 'Unconfirmed' %}
							<label class="label-closed">Unconfirmed</label>
						{% else %}
							<label class="label-open">Open</label>
						{% endif %}
						<div class="item-price">{{ lot.currentPrice }} {{ lot.currency.name }}</div>
						<!-- <a href="#" class="item-buy">Buy</a> -->
						<div class="item-comments">{{ lot.comments|length }} comments</div>
					</div>
				</li>
			{% endfor %}
		</ul>
	</div>
{% endblock %}